<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Sistema de Control de Auditoria de Distribucion</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>hibernate.ctx.xml</param-value>
    </context-param>
    <filter>
        <filter-name>LoginFiltro</filter-name>
        <filter-class>pe.com.backus.scaudi.filter.LoginFiltro</filter-class>
    </filter>
    <filter>
        <filter-name>EstandarFiltro</filter-name>
        <filter-class>pe.com.backus.scaudi.filter.EstandarFiltro</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EstandarFiltro</filter-name>
        <url-pattern>/pages/est1.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFiltro</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>pe.com.backus.scaudi.web.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EstandarServlet</servlet-name>
        <servlet-class>pe.com.backus.scaudi.web.controller.EstandarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxServlet</servlet-name>
        <servlet-class>pe.com.backus.scaudi.web.controller.AjaxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EstandarServlet</servlet-name>
        <url-pattern>/EstandarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxServlet</servlet-name>
        <url-pattern>/AjaxServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>
    <!--Faces Servlet-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
