<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="pe.com.backus.scaudi.domain.Usuario" table="Usuario">
    <id column="idUsuario" name="idUsuario" type="java.lang.Integer">
      <generator class="increment"/>
    </id>
    <property length="50" name="nombre" not-null="false" type="java.lang.String">
      <column name="nombre" sql-type="INTEGER"/>
    </property>
    <property length="20" name="login" not-null="true" type="java.lang.String">
      <column name="login" sql-type="VARCHAR"/>
    </property>
    <property length="45" name="password" not-null="true" type="java.lang.String">
      <column name="password" sql-type="VARCHAR"/>
    </property>
    <property name="tipo" not-null="true" type="int">
      <column name="tipo" sql-type="INT"/>
    </property>
  </class>
</hibernate-mapping>
