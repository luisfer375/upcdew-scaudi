<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="pe.com.backus.scaudi.domain">
  <class name="Usuario" table="T_USUARIO">
    <id column="IN_IDUSUARIO" name="idUsuario">
      <generator class="increment"/>
    </id>
    <property column="VC_NOMBRE" length="30" name="nombre"/>
    <property column="VC_LOGIN" length="30" name="login"/>
    <property column="VC_PASSWORD" length="30" name="password"/>
    <property column="IN_TIPO" name="tipo" type="INTEGER"/>
    <property column="IN_ESTADO" name="estado" type="INTEGER"/>
  </class>
</hibernate-mapping>
